---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
---

<Layout title="Pricing - QualifyMe">
  <main class="space-y-32 mb-32">
    <section class="py-20">
      <Container>
        <div class="mb-12 text-center">
          <h1 class="text-4xl font-bold text-gray-800 md:text-5xl dark:text-white">Pricing</h1>
          <p class="mt-4 text-gray-600 dark:text-gray-300 text-lg">Flexible, transparent plans for startups, agencies, and enterprises. Start free, upgrade as you grow.</p>
        </div>
        {/* Subscription Plans Table */}
        <div class="overflow-x-auto mb-16">
          <table class="min-w-full text-sm text-left text-gray-700 dark:text-gray-200 border rounded-2xl overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-4">Plan</th>
                <th class="px-6 py-4">Price</th>
                <th class="px-6 py-4">Applications</th>
                <th class="px-6 py-4">Recruiters</th>
                <th class="px-6 py-4">Job Posts</th>
                <th class="px-6 py-4">Custom Branding</th>
                <th class="px-6 py-4">Custom Domain</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b dark:border-gray-700">
                <td class="px-6 py-4 font-bold">Free Plan</td>
                <td class="px-6 py-4">₹ 4,500/mo (billed annually) – Valid for 1 month</td>
                <td class="px-6 py-4">50</td>
                <td class="px-6 py-4">1 recruiter</td>
                <td class="px-6 py-4">1</td>
                <td class="px-6 py-4">×</td>
                <td class="px-6 py-4">×</td>
              </tr>
              <tr class="border-b dark:border-gray-700">
                <td class="px-6 py-4 font-bold">Basic Plan</td>
                <td class="px-6 py-4">₹ 5,000/mo (₹ 4,500/mo early bird) (billed annually)</td>
                <td class="px-6 py-4">1,000</td>
                <td class="px-6 py-4">Up to 3</td>
                <td class="px-6 py-4">3</td>
                <td class="px-6 py-4">✓</td>
                <td class="px-6 py-4">×</td>
              </tr>
              <tr class="border-b dark:border-gray-700">
                <td class="px-6 py-4 font-bold">Premium Plan</td>
                <td class="px-6 py-4">₹ 15,000/mo (₹ 14,500/mo early bird) (billed annually)</td>
                <td class="px-6 py-4">5,000</td>
                <td class="px-6 py-4">Unlimited</td>
                <td class="px-6 py-4">10</td>
                <td class="px-6 py-4">✓</td>
                <td class="px-6 py-4">✓</td>
              </tr>
              <tr>
                <td class="px-6 py-4 font-bold">Enterprise</td>
                <td class="px-6 py-4">Custom pricing—contact us</td>
                <td class="px-6 py-4">Unlimited</td>
                <td class="px-6 py-4">Unlimited</td>
                <td class="px-6 py-4">Unlimited</td>
                <td class="px-6 py-4">✓</td>
                <td class="px-6 py-4">✓</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="mb-8 text-center text-gray-600 dark:text-gray-300">
          <p><strong>Early‑bird pricing available</strong> on annual subscriptions—ask about current offers!</p>
          <p>Start with a free trial and upgrade any time.</p>
          <p>Enterprise users get fully flexible limits and premium support.</p>
        </div>
        {/* Feature Comparison Table */}
        <div class="overflow-x-auto mb-16">
          <table class="min-w-full text-sm text-left text-gray-700 dark:text-gray-200 border rounded-2xl overflow-hidden">
            <thead class="bg-gray-100 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-4">Features</th>
                <th class="px-6 py-4">Basic</th>
                <th class="px-6 py-4">Premium</th>
                <th class="px-6 py-4">Enterprise</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b dark:border-gray-700">
