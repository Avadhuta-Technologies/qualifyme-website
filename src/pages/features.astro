---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
---

<Layout title="Features - QualifyMe">
  <main class="space-y-32 mb-32">
    {/* Hero Section */}
    <section class="relative pt-36 pb-24 bg-gradient-to-br from-primary/10 to-purple-100 dark:from-blue-950 dark:to-gray-900">
      <Container>
        <div class="relative text-center mx-auto lg:w-2/3">
          <h1 class="text-gray-900 text-balance dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl mb-6">Features That Power Smarter Hiring</h1>
