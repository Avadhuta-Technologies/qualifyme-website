---
import Layout from '../../../layouts/Layout.astro';
import Container from '../../../components/Container.astro';
import { releaseNotes, type ReleaseNote } from '../../../data/release-notes';

export function getStaticPaths() {
  return releaseNotes.map((release) => ({
    params: { version: release.version },
    props: { release }
  }));
}

interface Props {
  release: ReleaseNote;
}

const { version } = Astro.params;
const { release } = Astro.props;

// Find previous and next versions for navigation
const currentIndex = releaseNotes.findIndex(r => r.version === version);
const prevRelease = currentIndex < releaseNotes.length - 1 ? releaseNotes[currentIndex + 1] : null;
const nextRelease = currentIndex > 0 ? releaseNotes[currentIndex - 1] : null;
const isLatest = currentIndex === 0;
---

<Layout
    title={`Version ${release.version} Release Notes - QualifyMe`}
    description={`QualifyMe v${release.version} released on ${release.date}. ${release.highlights[0]}`}
    keywords={`QualifyMe ${release.version}, release notes, platform updates, new features, ${release.highlights.slice(0, 3).join(', ')}`}
    ogImage="/images/qualifyme-portal.avif"
>
  <main class="space-y-12">
    {/* Hero Section */}
    <section class="relative pt-40 py-12">
      <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
      </div>
      <Container>
        <div class="relative max-w-4xl mx-auto">
          {/* Back Link */}
          <a 
            href="/resources/release-notes" 
            class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary transition-colors mb-8"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>All Release Notes</span>
          </a>

          {/* Header */}
          <div class="flex flex-wrap items-start justify-between gap-4 mb-8">
            <div>
              <div class="flex items-center gap-4 mb-2">
                <h1 class="text-gray-900 dark:text-white font-bold text-4xl md:text-5xl">
                  Version {release.version}
                </h1>
                {isLatest && (
                  <span class="px-4 py-1.5 bg-primary text-white text-sm font-semibold rounded-full">
                    Latest
                  </span>
                )}
              </div>
              <p class="text-gray-600 dark:text-gray-400 text-lg">
                Released on {release.date}
              </p>
            </div>
          </div>

          {/* Quick Stats */}
          <div class="flex flex-wrap gap-4 mb-8">
            <div class="flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {release.features.length} New Features
              </span>
            </div>
            <div class="flex items-center gap-2 px-4 py-2 bg-blue-100 dark:bg-blue-900/30 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {release.improvements.length} Improvements
              </span>
            </div>
            <div class="flex items-center gap-2 px-4 py-2 bg-orange-100 dark:bg-orange-900/30 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                {release.bugFixes.length} Bug Fixes
              </span>
            </div>
          </div>
        </div>
      </Container>
    </section>

    {/* Release Content */}
    <section class="pb-12">
      <Container>
        <div class="max-w-4xl mx-auto">
          <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden">
            <div class="p-8 md:p-10 space-y-10">
              
              {/* Highlights */}
              <div>
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                  <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  </div>
                  Highlights
                </h2>
                <ul class="space-y-3">
                  {release.highlights.map((highlight) => (
                    <li class="flex items-start gap-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-700 dark:text-gray-300 text-lg">{highlight}</span>
                    </li>
                  ))}
                </ul>
              </div>

              {/* New Features */}
              {release.features && release.features.length > 0 && (
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                    <div class="w-10 h-10 bg-primary/10 rounded-xl flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                      </svg>
                    </div>
                    New Features
                  </h2>
                  <div class="grid gap-4 md:grid-cols-2">
                    {release.features.map((feature) => (
                      <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-5 border border-gray-100 dark:border-gray-600">
                        <h3 class="font-semibold text-gray-900 dark:text-white mb-2 text-lg">{feature.title}</h3>
                        <p class="text-gray-600 dark:text-gray-400">{feature.description}</p>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* Improvements */}
              {release.improvements && release.improvements.length > 0 && (
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                    <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                      </svg>
                    </div>
                    Improvements
                  </h2>
                  <ul class="grid gap-3 md:grid-cols-2">
                    {release.improvements.map((improvement) => (
                      <li class="flex items-start gap-3 bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                        <span class="text-gray-700 dark:text-gray-300">{improvement}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Bug Fixes */}
              {release.bugFixes && release.bugFixes.length > 0 && (
                <div>
                  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
                    <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900/30 rounded-xl flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                      </svg>
                    </div>
                    Bug Fixes
                  </h2>
                  <ul class="space-y-2">
                    {release.bugFixes.map((fix) => (
                      <li class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-gray-600 dark:text-gray-400">{fix}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

            </div>
          </div>
        </div>
      </Container>
    </section>

    {/* Navigation between versions */}
    <section class="pb-12">
      <Container>
        <div class="max-w-4xl mx-auto">
          <div class="flex flex-wrap justify-between gap-4">
            {prevRelease ? (
              <a 
                href={`/resources/release-notes/${prevRelease.version}`}
                class="flex items-center gap-3 px-6 py-4 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-primary hover:shadow-lg transition-all group"
              >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 group-hover:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                <div>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Previous</p>
                  <p class="font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                    Version {prevRelease.version}
                  </p>
                </div>
              </a>
            ) : (
              <div></div>
            )}
            
            {nextRelease ? (
              <a 
                href={`/resources/release-notes/${nextRelease.version}`}
                class="flex items-center gap-3 px-6 py-4 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-primary hover:shadow-lg transition-all group text-right"
              >
                <div>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Next</p>
                  <p class="font-semibold text-gray-900 dark:text-white group-hover:text-primary transition-colors">
                    Version {nextRelease.version}
                  </p>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 group-hover:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ) : (
              <div></div>
            )}
          </div>
        </div>
      </Container>
    </section>

    {/* CTA Section */}
    <section class="pb-20">
      <Container>
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-br from-primary/10 to-purple-100 dark:from-blue-950 dark:to-gray-900 rounded-3xl p-10 text-center">
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
              Ready to Experience These Features?
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-xl mx-auto">
              Start using the latest QualifyMe features today and transform your hiring process.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a 
                href="https://console.qualifyme.ai" 
                class="relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95"
              >
                <span class="relative text-base font-semibold text-white">Get Started Free</span>
              </a>
              <a 
                href="/resources/release-notes" 
                class="relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:border before:border-transparent before:bg-primary/10 before:bg-gradient-to-b before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 dark:before:border-gray-700 dark:before:bg-gray-800"
              >
                <span class="relative text-base font-semibold text-primary dark:text-white">All Releases</span>
              </a>
            </div>
          </div>
        </div>
      </Container>
    </section>
  </main>
</Layout>

<!-- Structured Data for SEO -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "TechArticle",
  "headline": `QualifyMe Version ${release.version} Release Notes`,
  "datePublished": release.date,
  "description": release.highlights[0],
  "author": {
    "@type": "Organization",
    "name": "QualifyMe"
  },
  "about": {
    "@type": "SoftwareApplication",
    "name": "QualifyMe",
    "softwareVersion": release.version
  }
})} />
