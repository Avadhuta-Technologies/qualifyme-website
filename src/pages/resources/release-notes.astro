---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/Container.astro';
import { releaseNotes } from '../../data/release-notes';
---

<Layout
    title="Release Notes - QualifyMe Platform Updates"
    description="Stay up-to-date with the latest QualifyMe platform updates, new features, improvements, and bug fixes. Read our detailed release notes."
    keywords="QualifyMe release notes, platform updates, new features, changelog, version history, QualifyMe updates"
    ogImage="/images/qualifyme-portal.avif"
>
  <main class="space-y-20">
    {/* Hero Section */}
    <section class="relative pt-40 py-16">
      <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
        <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
        <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
      </div>
      <Container>
        <div class="relative text-center mx-auto lg:w-2/3">
          <h1 class="text-gray-900 text-balance dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl mb-6">
            Release Notes
          </h1>
          <p class="text-gray-700 dark:text-gray-300 text-xl mb-4">
            Stay informed about the latest updates, features, and improvements to the QualifyMe platform.
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            Last updated: {releaseNotes[0].date}
          </p>
        </div>
      </Container>
    </section>

    {/* Release Notes Timeline */}
    <section class="pb-20">
      <Container>
        <div class="max-w-4xl mx-auto">
          {releaseNotes.map((release, index) => (
            <div class="relative mb-12 last:mb-0">
              {/* Timeline connector */}
              {index < releaseNotes.length - 1 && (
                <div class="absolute left-6 top-16 bottom-0 w-0.5 bg-gradient-to-b from-primary to-primary/20 dark:from-primary dark:to-primary/10 hidden md:block"></div>
              )}
              
              {/* Release Card */}
              <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden">
                {/* Header */}
                <div class="bg-gradient-to-r from-primary/10 to-purple-100/50 dark:from-primary/20 dark:to-gray-800 p-6 md:p-8">
                  <div class="flex flex-wrap items-center justify-between gap-4">
                    <div class="flex items-center gap-4">
                      <div class="w-12 h-12 bg-primary rounded-xl flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                      </div>
                      <div>
                        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
                          Version {release.version}
                        </h2>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">{release.date}</p>
                      </div>
                    </div>
                    {index === 0 && (
                      <span class="px-4 py-1.5 bg-primary text-white text-sm font-semibold rounded-full">
                        Latest
                      </span>
                    )}
                  </div>
                </div>

                {/* Content */}
                <div class="p-6 md:p-8 space-y-8">
                  {/* Highlights */}
                  <div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                      </svg>
                      Highlights
                    </h3>
                    <ul class="space-y-2">
                      {release.highlights.map((highlight) => (
                        <li class="flex items-start gap-3">
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          <span class="text-gray-700 dark:text-gray-300">{highlight}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  {/* New Features */}
                  {release.features && release.features.length > 0 && (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        New Features
                      </h3>
                      <div class="grid gap-4 md:grid-cols-2">
                        {release.features.map((feature) => (
                          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-2xl p-4">
                            <h4 class="font-semibold text-gray-800 dark:text-white mb-2">{feature.title}</h4>
                            <p class="text-sm text-gray-600 dark:text-gray-400">{feature.description}</p>
                          </div>
                        ))}
                      </div>
                    </div>
                  )}

                  {/* Improvements */}
                  {release.improvements && release.improvements.length > 0 && (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                        Improvements
                      </h3>
                      <ul class="grid gap-2 md:grid-cols-2">
                        {release.improvements.map((improvement) => (
                          <li class="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                            {improvement}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}

                  {/* Bug Fixes */}
                  {release.bugFixes && release.bugFixes.length > 0 && (
                    <div>
                      <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                        Bug Fixes
                      </h3>
                      <ul class="space-y-1">
                        {release.bugFixes.map((fix) => (
                          <li class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {fix}
                          </li>
                        ))}
                      </ul>
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </Container>
    </section>

    {/* CTA Section */}
    <section class="pb-20">
      <Container>
        <div class="bg-gradient-to-br from-primary/10 to-purple-100 dark:from-blue-950 dark:to-gray-900 rounded-3xl p-12 text-center">
          <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-4">
            Ready to Experience These Features?
          </h2>
          <p class="text-gray-600 dark:text-gray-300 text-lg mb-8 max-w-2xl mx-auto">
            Start using the latest QualifyMe features today and transform your hiring process with AI-powered assessments.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href="https://console.qualifyme.ai" 
              class="relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-primary before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95"
            >
              <span class="relative text-base font-semibold text-white">Get Started Free</span>
            </a>
            <a 
              href="/contact" 
              class="relative flex h-11 items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:border before:border-transparent before:bg-primary/10 before:bg-gradient-to-b before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 dark:before:border-gray-700 dark:before:bg-gray-800"
            >
              <span class="relative text-base font-semibold text-primary dark:text-white">Contact Us</span>
            </a>
          </div>
        </div>
      </Container>
    </section>
  </main>
</Layout>

<!-- Structured Data for SEO -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "QualifyMe Release Notes",
  "description": "Stay up-to-date with the latest QualifyMe platform updates, new features, improvements, and bug fixes.",
  "mainEntity": {
    "@type": "SoftwareApplication",
    "name": "QualifyMe",
    "operatingSystem": "Web",
    "softwareVersion": releaseNotes[0].version,
    "releaseNotes": releaseNotes.map(r => `Version ${r.version} - ${r.date}`).join(", ")
  }
})} />
