---
import { AstroFont } from 'astro-font';
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import "./../tailus.css"

export interface Props {
    title?: string;
    description?: string;
    keywords?: string;
    ogImage?: string;
    canonicalURL?: string;
    noindex?: boolean;
}

const {
    title = "QualifyMe - AI-Driven Hiring Assistant",
    description = "Automate screening, qualify top candidates instantly, and cut hiring time by 70%. AI-powered hiring assistant for faster, smarter recruitment.",
    keywords = "AI hiring, recruitment automation, candidate screening, interview automation, hiring software, HR tech, talent acquisition",
    ogImage = "/images/qualifyme-scores.avif",
    canonicalURL = Astro.url.href,
    noindex = false
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        
        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content="QualifyMe" />
        <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
        
        <!-- Canonical URL -->
        <link rel="canonical" href={canonicalURL} />
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(ogImage, Astro.url)} />
        <meta property="og:site_name" content="QualifyMe" />
        <meta property="og:locale" content="en_US" />
        
        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />
        
        <!-- Additional SEO Meta Tags -->
        <meta name="theme-color" content="#3B82F6" />
        <meta name="msapplication-TileColor" content="#3B82F6" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="default" />
        <meta name="apple-mobile-web-app-title" content="QualifyMe" />
        
        <!-- PWA Manifest -->
        <link rel="manifest" href="/manifest.json" />
        
        <!-- Apple Touch Icons -->
        <link rel="apple-touch-icon" href="/logo_white.png" />
        <link rel="apple-touch-icon" sizes="152x152" href="/logo_white.png" />
        <link rel="apple-touch-icon" sizes="180x180" href="/logo_white.png" />
        <link rel="apple-touch-icon" sizes="167x167" href="/logo_white.png" />
        
        <!-- Preconnect to external domains for performance -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="preconnect" href="https://www.googletagmanager.com" />
        <link rel="preconnect" href="https://www.google-analytics.com" />
        
        <!-- Preload critical resources -->
        <link rel="preload" href="/images/qualifyme-scores.avif" as="image" />
        <link rel="preload" href="/images/qualifyme-portal.avif" as="image" />
        <link rel="dns-prefetch" href="//console.qualifyme.ai" />
        
        <!-- Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=G-WEQNSDS8LS"></script>
        <script>
            /* eslint-disable */
            /* @ts-nocheck */
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-WEQNSDS8LS');
        </script>
        
        <!-- Structured Data -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "SoftwareApplication",
            "name": "QualifyMe",
            "description": "AI-driven hiring assistant that automates candidate screening and interview processes",
            "url": "https://qualifyme.ai",
            "applicationCategory": "BusinessApplication",
            "operatingSystem": "Web",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            },
            "provider": {
                "@type": "Organization",
                "name": "QualifyMe",
                "url": "https://qualifyme.ai",
                "logo": "https://qualifyme.ai/logo_white.png",
                "sameAs": [
                    "https://console.qualifyme.ai"
                ]
            },
            "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "4.8",
                "ratingCount": "150"
            },
            "featureList": [
                "AI-powered candidate screening",
                "Automated interview assessments",
                "Real-time candidate scoring",
                "Custom hiring workflows",
                "Video interview analysis",
                "Coding assessment tools"
            ]
        }
        </script>
        
        <!-- Organization Schema -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "QualifyMe",
            "url": "https://qualifyme.ai",
            "logo": "https://qualifyme.ai/logo_white.png",
            "description": "AI-powered hiring assistant that automates candidate screening and interview processes",
            "foundingDate": "2024",
            "contactPoint": {
                "@type": "ContactPoint",
                "contactType": "customer service",
                "email": "support@qualifyme.ai",
                "availableLanguage": "English"
            },
            "sameAs": [
                "https://console.qualifyme.ai"
            ]
        }
        </script>

        <AstroFont
            config={[
                {
                    src: [],
                    name: "Urbanist",
                    preload: true,
                    display: "swap",
                    selector: "html",
                    fallback: "sans-serif",
                    googleFontsURL: 'https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap',
                },
            ]}
        />
    </head>
    <body class="bg-white dark:bg-gray-950">
        <AppHeader />
        <slot />
        <AppFooter />
    </body>
</html>
