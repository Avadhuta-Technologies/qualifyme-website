---
import Container from "./Container.astro";
import { Linkedin } from "lucide-astro";
---

<footer
  class="bg-white text-gray-700 dark:bg-gray-950 dark:text-gray-300 py-10 transition-colors duration-300"
>
  <Container>
    <div class="m-auto md:w-11/12 lg:w-10/12">
      <div class="grid gap-12 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5">
        {/* Logo Section */}
        <div>
          <div class="flex items-center gap-2">
            <img
              src="/logo_white.png"
              alt="QualifyMe Logo"
              class="h-8 w-auto mb-4 dark:block"
            />

            <span
              class="text-xl font-bold tracking-wide text-gray-900 dark:text-white"
            >
              QualifyMe
            </span>
          </div>
          <p class="text-sm text-gray-500 dark:text-gray-400 leading-relaxed">
            AI-Driven Hiring Assistant.<br />
            Hire Smarter. Faster.
          </p>
        </div>

        {/* Product */}
        <div>
          <h3 class="text-gray-900 dark:text-white font-semibold mb-4">
            Product
          </h3>
          <ul class="space-y-3 text-sm">
            <li>
              <a
                href="/features"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Features</a
              >
            </li>
            <li>
              <a
                href="/pricing"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Pricing</a
              >
            </li>
            <li>
              <a
                href="/resources"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Resources</a
              >
            </li>
          </ul>
        </div>

        {/* Company */}
        <div>
          <h3 class="text-gray-900 dark:text-white font-semibold mb-4">
            Company
          </h3>
          <ul class="space-y-3 text-sm">
            <li>
              <a
                href="/contact"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Contact</a
              >
            </li>
            <li>
              <a
                href="/how-it-works"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >How It Works</a
              >
            </li>
          </ul>
        </div>

        {/* Legal */}
        <div>
          <h3 class="text-gray-900 dark:text-white font-semibold mb-4">
            Legal
          </h3>
          <ul class="space-y-3 text-sm">
            <li>
              <a
                href="/terms"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Terms of Use</a
              >
            </li>
            <li>
              <a
                href="/privacy"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Privacy Policy</a
              >
            </li>
            <li>
              <a
                href="/refund"
                class="hover:text-indigo-500 dark:hover:text-indigo-400 transition"
                >Refund Policy</a
              >
            </li>
          </ul>
        </div>

        {/* Social */}
        <div>
          <h3 class="text-gray-900 dark:text-white font-semibold mb-4">
            Stay Connected
          </h3>
          <div class="space-y-3 text-sm">
            <a
              href="https://www.linkedin.com/company/qualifyme/"
              target="_blank"
              class="inline-flex items-center justify-center hover:text-indigo-500 dark:hover:text-indigo-400 transition"
            >
              <Linkedin size={20} />
            </a>
          </div>
        </div>
      </div>

      {/* Bottom */}
      <div
        class="border-t border-gray-200 dark:border-gray-800 mt-16 pt-6 text-center text-sm text-gray-500 dark:text-gray-500"
      >
        Â© {new Date().getFullYear()} QualifyMe. All rights reserved.
        <span
          class="ml-2 bg-gray-200 dark:bg-gray-800 px-2 py-1 rounded-full text-xs text-gray-600 dark:text-gray-400"
        >
          Made with AI
        </span>
      </div>
    </div>
  </Container>
</footer>
